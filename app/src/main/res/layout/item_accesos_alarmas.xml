<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_alarm"
                app:tint="@color/red"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTRO DE ALARMA"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="4dp"
                app:tint="@color/gray_dark" />

            <TextView
                android:id="@+id/lbFechaAlarma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16/06/2025"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                app:tint="@color/gray_dark"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/lbHoraAlarma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:20:00"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado:"
                android:textSize="14sp"
                android:textColor="@color/gray_dark"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/lbResultadoAlarma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarma activada"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_user"
                app:tint="@color/gray_dark"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activado por:"
                android:textSize="14sp"
                android:textColor="@color/gray_dark"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/lbUsuarioActivador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cris"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_info"
                app:tint="@color/gray_dark"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/lbTipoActivacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: Modo seguro"
                android:textSize="14sp"
                android:textColor="@color/gray_dark"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>