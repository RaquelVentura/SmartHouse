<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:layout_margin="12dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgSensorGas"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/img_4"
            android:contentDescription="Sensor de gas"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textVIew14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor de Gas MQ2"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UbicaciÃ³n:"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/lbUbicacionMQ2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Cocina"
                    android:textSize="14sp"
                    android:textColor="#555555" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado:"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/lbEstadoMQ2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Leyendo"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCambiarEstadoSensorGas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activar Alarma" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
