<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:gravity="center"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/imgPuerta"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/puerta_cerrada"
        tools:srcCompat="@drawable/puerta_abierta" />

    <TextView
        android:id="@+id/lbUbicacionPuerta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:text="UbicaciÃ³n"
        tools:text="Entrada Principal" />

    <TextView
        android:id="@+id/lbEstadoPuerta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:text="Estado"
        tools:text="Cerrada" />

    <Button
        android:id="@+id/btnCambiarEstadoPuerta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="Cambiar estado"
        android:textAllCaps="false"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white" />

</LinearLayout>