<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnCerrarCasa">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    style="@style/SectionHeaderText"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_light"
                    android:drawableTint="@color/primary"
                    android:text="LUCES" />

                <Switch
                    android:id="@+id/switchLuces"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="ENCENDER" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerLeds"
                style="@style/DeviceCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:clipToPadding="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    app:srcCompat="@drawable/door"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/SectionHeaderText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTint="@color/primary"
                    android:text="PUERTA PRINCIPAL" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerServo"
                style="@style/DeviceCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:clipToPadding="false"/>

            <TextView
                android:id="@+id/textView6"
                style="@style/SectionHeaderText"
                android:text="TEMPERATURA Y HUMEDAD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/ic_thermostat"
                android:drawableTint="@color/primary"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDHT11"
                style="@style/DeviceCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:clipToPadding="false"/>

            <TextView
                android:id="@+id/textView7"
                style="@style/SectionHeaderText"
                android:text="SENSOR DE GAS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/ic_gas"
                android:drawableTint="@color/primary"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSensorGas"
                style="@style/DeviceCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:clipToPadding="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/window"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/textView9"
                    style="@style/SectionHeaderText"
                    android:text="VENTANAS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerVentanas"
                style="@style/DeviceCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:clipToPadding="false"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCerrarCasa"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:text="Modo Seguro"
        android:textColor="@color/blanco_hielo"
        android:textStyle="bold"
        app:icon="@drawable/ic_security"
        app:iconTint="@color/blanco_hielo"
        app:backgroundTint="@color/rojo_emergencia"
        app:elevation="8dp"
        app:strokeColor="@color/blanco_hielo"
        app:strokeWidth="1dp"/>
</RelativeLayout>