<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_alarm"
                    app:tint="?attr/colorError" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTRO DE ALARMA"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/lbFechaAlarma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="16/06/2025"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_clock"
                    app:tint="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/lbHoraAlarma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:20:00"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lbTipoAlarma"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Tipo: Apertura"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lbUbicacionAlarma"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:text="UbicaciÃ³n: Puerta principal"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnEliminarAlarma"
                android:layout_width="63dp"
                android:layout_height="72dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar registro"
                app:srcCompat="@android:drawable/ic_menu_delete" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
